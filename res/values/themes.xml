<resources
	xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="Mysms" parent="android:Theme.Holo">
		<item name="isUpdate">false</item>

		<item name="messageEditorBackground">@drawable/message_editor_background</item>
		<item name="conversationListItemNameStyle">@style/ConversationListItemName</item>
		<item name="conversationListItemSnippetStyle">@style/ConversationListItemSnippet</item>
		<item name="conversationListAttachmentDrawable">@drawable/attachment</item>
		<item name="attachmentBackground">@color/attachment_background</item>
		<item name="attachmentsBackground">@drawable/attachments_background</item>
		<item name="composeMessageBackground">#000</item>
		<item name="sheetBackground">#23282d</item>
		<item name="routingInviteIcon">@drawable/ab_add_person</item>
		<item name="messageListDateSeparatorStyle">@style/MessageListDateSeparator</item>

		<item name="android:actionMenuTextColor">@android:color/white</item>

		<item name="feedbackLikeIcon">@drawable/feedback_like</item>
		<item name="feedbackProblemIcon">@drawable/feedback_problem</item>
		<item name="feedbackMailIcon">@drawable/feedback_mail</item>
		<item name="feedbackFooterStyle">@style/FeedbackFooter</item>

		<item name="typingActivatedDrawable">@drawable/typing_dot_white</item>
		<item name="typingNotActivatedDrawable">@drawable/typing_dot_white</item>

		<item name="emojiSmileyButtonDrawable">@drawable/smiley_button</item>
		<item name="emojiKeyboardIconDrawable">@drawable/keyboard_icon</item>
		<item name="emojiKeyboardCloseDrawable">@drawable/keyboard_close</item>

		<item name="composeBackgroundColor">#2032b2e1</item>

		<item name="bubbleIncomingDrawable">@drawable/bubble_incoming</item>
		<item name="bubbleOutgoingDrawable">@drawable/bubble_outgoing</item>
		<item name="messageIncomingBodyColor">#cccccc</item>
		<item name="messageIncomingDateColor">#808080</item>
		<item name="messageOutgoingBodyColor">#ffffff</item>
		<item name="messageOutgoingDateColor">#999999</item>

		<item name="callListItemNameStyle">@style/CallListItemName</item>
		<item name="callListItemDurationStyle">@style/CallListItemDuration</item>
		<item name="callListItemDateStyle">@style/CallListItemDate</item>

		<item name="activeCallBackgroundColor">#3300b4d8</item>
	</style>

	<style name="Mysms.Popup" parent="android:Theme.Holo.Dialog">
		<item name="messageEditorBackground">@drawable/message_editor_background</item>
		<item name="popupListBackground">#23282d</item>
		<item name="actionbarBackground">@drawable/actionbar_background</item>
		<item name="messageListDateSeparatorStyle">@style/MessageListDateSeparator</item>
		<item name="emojiSmileyButtonDrawable">@drawable/smiley_button</item>

		<item name="android:windowIsFloating">false</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsTranslucent">true</item>

		<item name="callPopupNameStyle">@style/CallPopupName</item>
		<item name="callPopupNumberStyle">@style/CallPopupNumber</item>
	</style>
</resources>